<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane id="player" stylesheets="@../css/main_gui_style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frank.jmusicplayerfx.gui.BottomPlayer">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="125.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="75.0" vgrow="NEVER" />
    </rowConstraints>
    <Button id="btn_player_play" mnemonicParsing="false" onAction="#play" styleClass="btn_player" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
      <graphic>
         <Label fx:id="graphicPlayButton" />
      </graphic></Button>
    <Button id="btn_player_control_left" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#previousSong" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
        <styleClass>
            <String fx:value="btn_player" />
            <String fx:value="btn_player_sides" />
        </styleClass>
    </Button>
    <Button id="btn_player_control_right" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#nextSong" GridPane.columnIndex="3" GridPane.hgrow="NEVER" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
        <styleClass>
            <String fx:value="btn_player" />
            <String fx:value="btn_player_sides" />
        </styleClass>
    </Button>
</GridPane>
