<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="@../css/content_style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frank.jmusicplayerfx.gui.SongsPane">
    <TableView id="song_table" fx:id="musicTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <placeholder>
            <Label text="No songs were found." />
        </placeholder>
        <columns>
            <TableColumn fx:id="titleColumn" editable="false" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="artistColumn" editable="false" prefWidth="75.0" text="Artist" />
            <TableColumn fx:id="albumColumn" editable="false" prefWidth="75.0" text="Album" />
            <TableColumn id="duration_column" fx:id="durationColumn" editable="false" prefWidth="75.0" text="Duration" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
</AnchorPane>
